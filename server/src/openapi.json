{
  "openapi": "3.0.0",
  "info": {
    "title": "JStack API",
    "version": "1.0.0",
    "description": "API documentation for JStack backend"
  },
  "servers": [
    {
      "url": "http://localhost:4000",
      "description": "Development server"
    }
  ],
  "paths": {
    "/api/post/recent": {
      "get": {
        "summary": "Get recent post",
        "description": "Fetches the most recent post",
        "tags": ["Posts"],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string",
                      "description": "The title of the post"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
